<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.example.torre.yora.activities.LoginNarrowActivity">

    <include
        layout="@layout/include_login_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <fragment
            android:name="com.example.torre.yora.fragments.LoginFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:layout="@layout/fragment_login"
            android:id="@+id/activity_login_narrow_fragment"/>

    </FrameLayout>

</LinearLayout>
